<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EED8B3"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MainMenuStart"
            android:id="@+id/btnStart"
            android:layout_marginTop="55dp"
            android:layout_alignParentTop="true"
            android:background="#EED8B3"
            android:textColor="#A13222"
            android:layout_centerHorizontal="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainMenuRankings"
            android:id="@+id/btnRankings"
            android:layout_below="@+id/btnStart"
            android:background="#EED8B3"
            android:textColor="#A13222"
            android:layout_centerHorizontal="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MainMenuSettings"
            android:id="@+id/btnSettings"
            android:layout_below="@+id/btnRankings"
            android:background="#EED8B3"
            android:textColor="#A13222"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/MainTitle"
            android:id="@+id/txtMainTitle"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScoreTest"
        android:id="@+id/btnInser"
        android:background="#EED8B3"
        android:textColor="#A13222"
        android:layout_below="@+id/btnSettings"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
